<section class="register-form-container">

    <form method="post">
        <h3>Register</h3>
        <label>Email</label>
        <input type="email" name="email" class="box" id="email" value="{{email}}">
        <label>Username</label>
        <input type="text" name="username" class="box" id="username" value="{{username}}">
        <label>Password</label>
        <input type="password" name="password" class="box" id="password">
        <label>Confirm Password</label>
        <input type="password" name="repeatPassword" class="box" id="repeatPassword">
        <input type="submit" value="Register" class="btn">
        <p>Have an account ? <a href="/users/login">Click here</a></p>
    </form>
</section>