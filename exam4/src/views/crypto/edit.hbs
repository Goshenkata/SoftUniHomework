<main>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    {{>error}}
    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Announcement</h1>
            <form method="post">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{coin.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{coin.image}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{coin.price}}">
                <label>Description:</label>
                <textarea name="description" id="description">{{coin.description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="paymentMethod">
                    <option {{#if (equal coin.paymentMethod "crypto-wallet")}}selected{{/if}}  value="crypto-wallet">Crypto Wallet</option>
                    <option {{#if (equal coin.paymentMethod "credit-card")}}selected{{/if}}  value="credit-card">Credit Card</option>
                    <option {{#if (equal coin.paymentMethod "debit-card")}}selected{{/if}}  value="debit-card">Debit Card</option>
                    <option {{#if (equal coin.paymentMethod "paypal")}}selected{{/if}}  value="paypal">PayPal</option>
                </select>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>