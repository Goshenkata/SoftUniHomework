<main>
    {{>error}}
    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Announcement</h1>
            <h4>Post your coins to sell</h4>
            <form method="post">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{data.name}}" placeholder="Bitcoin">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{data.image}}" placeholder="http://...">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{data.price}}" placeholder="31,166.71">
                <label>Description:</label>
                <textarea id="description" name="description" placeholder="Introduce your coins...">{{data.description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="paymentMethod">
                    <option {{#if (equal data.paymentMethod "crypto-wallet")}}selected{{/if}}  value="crypto-wallet">Crypto Wallet</option>
                    <option {{#if (equal data.paymentMethod "credit-card")}}selected{{/if}}  value="credit-card">Credit Card</option>
                    <option {{#if (equal data.paymentMethod "debit-card")}}selected{{/if}}  value="debit-card">Debit Card</option>
                    <option {{#if (equal data.paymentMethod "paypal")}}selected{{/if}}  value="paypal">PayPal</option>
                </select>
                <input type="submit" id="btn" value="TRADE"></input>
            </form>
        </div>
    </section>
</main>