<main>
    <section class="crypto-search">
        <h1>Search</h1>

        <form class="search-form" method="POST">
            <input type="text" class="search-coin" name="name" value="{{name}}" placeholder="Search here...">
            <select id="payment" name="paymentMethod">
                <option {{#if (equal paymentMethod "crypto-wallet")}}selected{{/if}}  value="crypto-wallet">Crypto Wallet</option>
                <option {{#if (equal paymentMethod "credit-card")}}selected{{/if}}  value="credit-card">Credit Card</option>
                <option {{#if (equal paymentMethod "debit-card")}}selected{{/if}}  value="debit-card">Debit Card</option>
                <option {{#if (equal paymentMethod "paypal")}}selected{{/if}}  value="paypal">PayPal</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        <div class="search-result">
            <div class="search-list">
                {{#each coins}}
                    {{>coinSearch}}
                {{else}}
                    <div class="no-match">
                        <p>No match was found!</p>
                    </div>
                {{/each}}
            </div>

        </div>

    </section>
</main>