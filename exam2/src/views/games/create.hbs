<main id="create">
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->

    {{>error}}

    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Game Code Offer</h1>
            <h4>Post your code to sell</h4>
            <form method="POST">
                <label>Platform:</label>
                <select id="platform" name="platform">
                    <option value="{{data.platform}}">-------</option>
                    <option {{#if (equal game.platform "PC")}}selected{{/if}}  value="PC">PC</option>
                    <option {{#if (equal game.platform "Nintendo")}}selected{{/if}} value="Nintendo">Nintendo</option>
                    <option {{#if (equal game.platform "PS4")}}selected{{/if}} value="PS4">PS4</option>
                    <option {{#if (equal game.platform "PS5")}}selected{{/if}} value="PS5">PS5</option>
                    <option {{#if (equal game.platform "XBOX")}}selected{{/if}} value="XBOX">XBOX</option>
                </select>
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{data.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="image" value="{{data.image}}" placeholder="http://...">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{data.price}}">
                <label>Genre:</label>
                <input type="text" id="genre" name="genre" value="{{data.genre}}">
                <label>Description:</label>
                <textarea id="description" name="description">{{data.description}}</textarea>

                <input type="submit" id="btn" value="CREATE"></input>
            </form>
        </div>
    </section>
</main>