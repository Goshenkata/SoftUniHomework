<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" method="POST">
            <input type="text" class="search-game" name="name" value="{{name}}" placeholder="Search here...">
            <select id="platform" name="platform">
                <option value="">-------</option>
                <option {{#if (equal platform "PC")}}selected{{/if}}  value="PC">PC</option>
                <option {{#if (equal platform "Nintendo")}}selected{{/if}} value="Nintendo">Nintendo</option>
                <option {{#if (equal platform "PS4")}}selected{{/if}} value="PS4">PS4</option>
                <option {{#if (equal platform "PS5")}}selected{{/if}} value="PS5">PS5</option>
                <option {{#if (equal platform "XBOX")}}selected{{/if}} value="XBOX">XBOX</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        <div class="search-result">
            <div class="search-list">
                {{#each games}}
                    {{>game}}
                {{else}}
                    <p>No match was found!</p>
                {{/each}}
            </div>
        </div>

    </section>
</main>